{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}